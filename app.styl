@import 'nib'
whiteA = #F2F2F2
grayA = #F5F5F5
body
html
	padding 0
	margin 0
h1
	margin 0
img
	width 100%
.Layout
	&-header
		text-align center
.Subscriptions
	margin 1em auto
	width 95%
.Form
	width 85%
	margin 0 auto
.Item
	border-radius 0.3em
	background-color grayA
	display flex
	flex-direction column
	min-height 11.81em
	padding 0.3rem
	&-list
		background-color white
		display flex
		justify-content space-between
		width 100%
	&-title
		background-color white
		text-align center
	&-actions
		margin 1em 1em 1em 0
.btn-custom
	text-align center
	position initial !important
	&.is-active
		.material-icons
			transform rotate(180deg)
.items
	padding 1em
	border 1px solid grayA